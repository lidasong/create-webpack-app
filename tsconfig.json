{
    "compilerOptions": {
        "module": "ESNext",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*",
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}